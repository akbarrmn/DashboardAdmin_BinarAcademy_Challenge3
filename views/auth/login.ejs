<div class="wrap">
    <div class="background"></div>
    <div class="content">
        <img src="img/Rectangle 62.png" alt="">
        <h3 class="mt-4">Welcome, Admin BCR</h3>
        <% if (message.length>0) { %>
            <div class="alert alert-danger mt-5" id="alert" role="alert">
                <p class="mb-0"><%= message %>  </p>
            </div>
        <% } %> 
        <form action="/login" class="mt-5" method="post">
            <table width=100%>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control input-sm email" id="email" name="email" type="email" placeholder="Contoh: johndee@gmail.com">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control input-sm password" id="password" name="password" type="password" placeholder="6+ karakter">
                </div>
                <button class="btn btn-primary mt-5" type="submit" style="width: 100%; ">Sign in</button>
            </table>
        </form>
    </div>
</div>