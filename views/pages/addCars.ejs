<nav aria-label="breadcrumb">
    <ol class="breadcrumb pl-0" style="background: none;">
        <li class="breadcrumb-item"><a href="/cars">Cars</a></li>
        <li class="breadcrumb-item"><a href="/cars">List Car</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add New Car</li>
    </ol>
</nav>
<h5 class="font-weight-bold mb-0">Add New Car</h5>
<form class="mt-4" method="POST" action="/add-new-car">
    <div class="form-data" style="background-color: white; padding: 2rem;">
        <div class="form-group row">
            <div class="col-sm-10">
                <input type="hidden" class="form-control" name="id" id="id" placeholder="id">
            </div>
        </div>
        <div class="form-group row">
            <label for="nama" class="col-sm-2 col-form-label">Nama</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="nama" id="name" placeholder="Nama">
            </div>
        </div>
        <div class="form-group row">
            <label for="kategori" class="col-sm-2 col-form-label">Kategori</label>
            <div class="col-sm-10">
                <select name="kategori" required class="form-control">
                    <option>Pilih Kategori</option>
                    <option value="Small">Small</option>
                    <option value="Medium">Medium</option>
                    <option value="Large">Large</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="harga" class="col-sm-2 col-form-label">Harga</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="harga" id="harga" placeholder="Harga">
            </div>
        </div>
        <div class="form-group row">
            <label for="harga" class="col-sm-2 col-form-label">Foto</label>
            <div class="input-group col-sm-10" id="harga">
                <div class="custom-file">
                    <input type="file" class="form-control custom-file-input" id="customFileLang" name="foto">
                    <label class="custom-file-label" for="customFileLang">Choose file</label>
                  </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="startrent" class="col-sm-2 col-form-label">Start Rent</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" name="startrent" id="startrent">
            </div>
        </div>
        <div class="form-group row">
            <label for="finishrent" class="col-sm-2 col-form-label">Finish Rent</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" name="finishrent" id="finishrent">
            </div>
        </div>
        <div class="form-group row">
            <label for="createdat" class="col-sm-2 col-form-label">Created at</label>
            <div class="col-sm-10">
                <input type="hidden" class="form-control" name="createdat" id="createdat">-
            </div>
        </div>
        <div class="form-group row">
            <label for="updatedat" class="col-sm-2 col-form-label">Updated at</label>
            <div class="col-sm-10">
                <input type="hidden" class="form-control" name="updatedat" id="updatedat">-
            </div>
        </div>
    </div>
    <div class="form-button mt-5 d-flex">
        <a href="/cars" type="button" class="btn btn-outline-primary mr-2 cancel">Cancel</a>
        <button type="submit" class="btn btn-outline-primary save">Save</button>
    </div>
</form>